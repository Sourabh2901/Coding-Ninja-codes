
public class Solution {
     public static int staircase(int n){
         if(n == 0){
             return 1;
         }
         
         int x=0,y=0,z=0;
         
         if(n>=1)
              x = staircase(n-1);
         if(n >=2)
              y = staircase(n-2);
         if(n >=3)
              z = staircase(n-3);
         
         return x+y+z;

	}
	
}
